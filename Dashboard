EMPAGE=DIM_EMPLOYEEUNIQUEPAYE_MAS["Emp_Age"]
for i in range(len(DIM_EMPLOYEEUNIQUEPAYE_MAS)):
	c=lignevaluempaye[i]
	a=a+EMPAGE[c]
moyagem=a/i
moyagem=int(moyagem)

def calculrapportcongedierfeminin_congediertotalpardate(date_actuelle): #calcul l'evolution du rapport de (congédiées feminin)/(congédiers totaux) en fonction d'une fourchette de date fournise 
	tableauemploieactifpardate=[]
	nbr_date_totales=5
	for j in range(nbr_date_totales):
		af=0
		am=0
		for i in range(len(lignevaluefpaye)): 
			c=lignevaluefpaye[i]
			if date_actuelle[j]>=annee_startpaid[c]:
				if date_actuelle[j]<=annee_endpaid[c]:
					b=1
				else: 
					b=0
			else: 
				b=0
			af=af+b
		for i in range(len(lignevaluempaye)):
			c=lignevaluempaye[i]
			if date_actuelle[j]>=annee_startpaid[c]:
				if date_actuelle[j]<=annee_endpaid[c]:
					b=1
				else:
					b=0
			else:
				b=0
			am=am+b
		amf=am+af
		if amf!=0: 
			tableauemploieactifpardate.append(af/(am+af))
		else:
			tableauemploieactifpardate.append(-0.1)
	return tableauemploieactifpardate
  
